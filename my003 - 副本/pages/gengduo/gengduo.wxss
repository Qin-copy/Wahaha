.item-left{
  background-color: rgb(204, 171, 204);
  display: flex;
  flex-direction: row;
  width: 30%;

  align-items: center;
}
.item-right{
  background-color: rgb(204, 171, 204);
  display: flex;
  flex-direction: row;
  width: 70%;

}
button{
  padding: 0;
  width: 50%;
  background: none;
  border:none;
}
.all{
  height: 150rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  border: 4px solid rgb(231, 147, 227);
}
.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  background: none;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
}
.nickname {
  width: 80%;
  height: 100rpx;
  margin: 20px auto;
  border: 1px solid #000000;
  text-align: center;
}
.tou{
  background-image: url('/images/bj.jpg');
  border: 1px solid #000000;
  background-size: cover;
  background-position: center;
  height: 400rpx;
}